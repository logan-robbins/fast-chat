# =============================================================================
# Fast-Chat Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# Required
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here

# -----------------------------------------------------------------------------
# Optional - chat-api
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Optional - chat-app
# -----------------------------------------------------------------------------
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here
DEFAULT_MODEL=gpt-4o
DEFAULT_TEMPERATURE=0.0

# -----------------------------------------------------------------------------
# Optional - OpenAI-compatible gateways (LiteLLM / proxies)
# -----------------------------------------------------------------------------
OPENAI_BASE_URL=
LITELLM_BASE_URL=
LITELLM_API_KEY=                       # Requires LITELLM_BASE_URL when set
OPENAI_USE_RESPONSES_API=true

# -----------------------------------------------------------------------------
# Optional - MCP web search provider
# -----------------------------------------------------------------------------
WEB_SEARCH_PROVIDER=perplexity         # Must be: perplexity | mcp
MCP_SERVERS_JSON=[]                    # JSON array of MCP servers (see README schema)
MCP_WEB_SEARCH_TOOL=search_engine      # MCP tool name for web search
MCP_WEB_SEARCH_ENGINE=google           # Engine argument sent to MCP tool
