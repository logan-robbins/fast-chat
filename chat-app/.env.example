# Service-specific configuration for tgpt-chat
# Shared config is loaded from local-dev/.env
SERVICE_NAME=tgpt-chat
GRPC_PORT=50058
HEALTH_PORT=8081
LANGGRAPH_STUDIO_PORT=2024

# Tool timeout configuration
ATLASSIAN_TOOL_TIMEOUT=60
RAG_TOOL_TIMEOUT=45

# Perplexity configuration
PERPLEXITY_API_ENDPOINT=https://api.perplexity.ai/chat/completions
PERPLEXITY_MODEL=sonar
PERPLEXITY_MAX_TOKENS=2000
PERPLEXITY_TEMPERATURE=0.2
PERPLEXITY_TIMEOUT=30
